.container {
    padding: 16rpx;
  }

/* 搜索框样式 */
.search-box {
    background-color: #fff;
    border-radius: 40rpx;      /* 圆角 */
    padding: 5rpx 20rpx;      /* 内边距 */
    margin-bottom: 30rpx;      /* 与标题间距 */
    width: 85%;
    display: flex;             /* 使用flex布局容纳图标和输入框 */
    align-items: center;       /* 垂直居中对齐 */
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
    border: 1rpx solid rgb(209, 208, 208); 
  }
  .search-icon {
  color: #999;               /* 图标颜色 */
  margin-right: 15rpx;       /* 与输入框的间距 */
}
  .search-input {
    width: 100%;
    height: 60rpx;
    font-size: 28rpx;
  }



  /* 无建议提示样式 */
  .no-suggest{
    margin-top: 10rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 20rpx;
    font-size: 28rpx;
    color: #999;
    text-align: center;
  }