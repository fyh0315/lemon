<!-- form.wxml -->
<view class="page-content">

<!-- 顶部：排练室名称与头像 -->
<view class="page-header">
  <image src="/images/room-avatar.png" class="room-avatar" />
  <text class="room-name">排练室AAA</text>
</view>

<view class="page-medium">
<!-- 日期选择模块 -->
<view class="form-section">
  <view class="label">日期</view>
  <picker mode="date" value="{{selectedDate}}" start="2025-09-05" end="2025-12-31" bindchange="handleDateChange">
    <view class="date-picker">
      <input type="text" placeholder="点击选择日期" value="{{selectedDate}}" disabled />
      <image src="https://lemon-shanghai.oss-cn-shanghai.aliyuncs.com/calendar.png" class="calendar-icon" />
    </view>
  </picker>
</view>

<!-- 时段选择模块 -->
<view class="form-section">
  <view class="label">时段</view>
  <view class="time-range">
    <!-- 开始时间选择器 -->
    <picker 
      mode="time" 
      value="{{startTime}}" 
      start="09:00" 
      end="22:00" 
      bindchange="handleStartTimeChange">
      <view class="time-picker">
        <text>{{startTime}}</text>
        <image src="/images/calendar-icon.png" class="calendar-icon" />
      </view>
    </picker>
    
    <view class="separator">—</view>
    
    <!-- 结束时间选择器 -->
    <picker 
      mode="time" 
      value="{{endTime}}" 
      start="09:00" 
      end="24:00" 
      bindchange="handleEndTimeChange">
      <view class="time-picker">
        <text>{{endTime}}</text>
        <image src="/images/calendar-icon.png" class="calendar-icon" />
      </view>
    </picker>
    
    <view class="unit">时</view>
  </view>
</view>

<!-- 预计人数模块 -->
<view class="form-section">
  <view class="label">预计人数</view>
  <view class="people-count">
    <input type="number" value="{{peopleCount}}" bindinput="handlePeopleCountInput" />
    <view class="count-buttons">
      <image src="https://lemon-shanghai.oss-cn-shanghai.aliyuncs.com/book/arrow-up.PNG" bindtap="handlePeopleCountUp" />
      <image src="https://lemon-shanghai.oss-cn-shanghai.aliyuncs.com/book/arrow-down.PNG" bindtap="handlePeopleCountDown" />
    </view>
  </view>
</view>
</view>

<!-- 优惠券选择模块 -->
<view class="form-section">
  <view class="label">选择优惠券</view>
  <view class="coupon-area">
    <view></view>
  </view>
</view>

</view>

<!-- 底部：合计与提交按钮 -->
<view class="footer-bar">
  <view class="total-price">
    <view class="label">合计：</view>
    <view class="price">{{price}}</view>
  </view>
  <button class="submit-btn" bindtap="handleSubmit">提交订单</button>
</view>