<!-- form.wxml -->
<!-- 顶部：排练室名称与头像 -->
<view class="page-header">
  <image src="/images/room-avatar.png" class="room-avatar" />
  <text class="room-name">排练室AAA</text>
</view>

<view class="page-medium">
<!-- 日期选择模块 -->
<view class="form-section">
  <text class="label">日期</text>
  <picker mode="date" value="{{selectedDate}}" start="2025-09-05" end="2025-12-31" bindchange="handleDateChange">
    <view class="date-picker">
      <input type="text" placeholder="点击选择日期" value="{{selectedDate}}" disabled />
      <image src="/images/calendar-icon.png" class="calendar-icon" />
    </view>
  </picker>
</view>

<!-- 时段选择模块 -->
<view class="form-section">
  <text class="label">时段</text>
  <view class="time-range">
    <!-- 开始时间选择器 -->
    <picker 
      mode="time" 
      value="{{startTime}}" 
      start="09:00" 
      end="22:00" 
      bindchange="handleStartTimeChange">
      <view class="time-picker">
        <text>{{startTime ? startTime.split(':')[0] : '开始'}}</text>
        <image src="/images/calendar-icon.png" class="calendar-icon" />
      </view>
    </picker>
    
    <text class="separator">—</text>
    
    <!-- 结束时间选择器 -->
    <picker 
      mode="time" 
      value="{{endTime}}" 
      start="09:00" 
      end="24:00" 
      bindchange="handleEndTimeChange">
      <view class="time-picker">
        <text>{{endTime ? endTime.split(':')[0] : '结束'}}</text>
        <image src="/images/calendar-icon.png" class="calendar-icon" />
      </view>
    </picker>
    
    <text class="unit">时</text>
  </view>
</view>

<!-- 预计人数模块 -->
<view class="form-section">
  <text class="label">预计人数</text>
  <view class="people-count">
    <input type="number" value="{{peopleCount}}" bindinput="handlePeopleCountInput" />
    <view class="count-buttons">
      <image src="/images/arrow-up.png" bindtap="handlePeopleCountUp" />
      <image src="/images/arrow-down.png" bindtap="handlePeopleCountDown" />
    </view>
  </view>
</view>
</view>

<!-- 优惠券选择模块 -->
<view class="form-section">
  <text class="label">选择优惠券</text>
  <view class="coupon-area">
    <view>暂无可用优惠券</view>
  </view>
</view>

<!-- 底部：合计与提交按钮 -->
<view class="footer-bar">
  <view class="total-price">
    <text class="label">合计：</text>
    <text class="price">¥ 120</text>
  </view>
  <button class="submit-btn" bindtap="handleSubmit">提交订单</button>
</view>