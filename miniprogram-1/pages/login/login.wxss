.auth-modal {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
    padding: 24px;
    box-shadow: 0 -2px 12px rgba(0,0,0,0.1);
  }
  
  /* 应用信息模块*/
  .header-wrapper {
    margin-bottom: 20px;
  }
  .auth-header {
    display: flex;
    align-items: center;
  }
  .auth-logo {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
    background: #f5f5f5;
  }
  .auth-title {
    display: flex;
    flex-direction: column;
  }
  .app-name {
    font-size: 16px;
    font-weight: bold;
    color: #333;
  }
  .app-desc {
    font-size: 14px;
    color: #999;
  }
  
  /* 授权说明模块*/
  .desc-wrapper {
    margin-bottom: 16px;
  }
  .auth-desc {
    font-size: 14px;
    color: #666;
    line-height: 1.4;
  }
  
  /* 分割线*/
  .divider-top {
    height: 1px;
    background-color: #ebebeb;
    margin: 8px 0;
  }
  .divider-bottom {
    height: 1px;
    background-color: #ebebeb;
    margin: 12px 0;
  }
  
  /* 用户信息模块*/
  .user-card {
    display: flex;
    align-items: center;
  }
  .user-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-right: 12px;
  }
  .user-info {
    display: flex;
    flex-direction: column;
  }
  .user-nickname {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    margin-bottom: 4px;
  }
  .user-subtitle {
    font-size: 12px;
    color: #999;
  }
  
  .btn-wrapper {
    margin-top: 24px;
  }
  .btn-group {
    display: flex;
    justify-content: space-between;
  }
  .btn {
    width: 46%;
    height: 44px;
    line-height: 44px;
    text-align: center;
    border-radius: 8px;
    font-size: 16px;
  }
  .cancel {
    background: #f5f5f5;
    color: #333;
  }
  .confirm {
    background: #00cc66;
    color: #fff;
  }