/* roomDetail.wxss */
.slide-container {
    width: 100%;
    height: 350rpx;
    background: #f5f5f5;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .slide-image {
    width:100%;
    height:100%;
    display:block;
  }
  
  
  .room-info {
    padding: 20rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .room-nt{
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15rpx;
  }

  .room-name {
    font-size: 42rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .room-time {
    display: block;
    margin: 10rpx 0;
    color: #666;
  }

  .room-price {
    display: block;
    margin: 10rpx 0;
    color: #666;
    font-size: 32rpx;
  }
  
  .room-location {
    display: flex;
    align-items: center;
    gap: 10rpx;
    margin: 10rpx 0;
    flex-wrap: wrap;
  }
  
  .btns{
    display: flex;
    justify-content: flex-end;
    padding: 0 20rpx; 
    margin-left: auto;
  }

  .tomap{
    background-color: #38393a;
    color: white;
    font-size: 28rpx;
    padding: 10rpx 28rpx;
    border: none;
    margin-right: 5rpx;
  }

  .call-btn {
    background: #333;
    color: #fff;
    font-size: 28rpx;
    padding: 10rpx 30rpx;
    border: none;
    margin-left: 5rpx;
  }
  
  .device-list {
    padding: 20rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
    display: block;
  }
  
  .device-item {
    display: flex;
    align-items: center;
    gap: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .device-img {
    width: 100rpx;
    height: 100rpx;
  }
  
  .device-name {
    font-size: 28rpx;
    font-weight: bold;
  }
  
  .device-model {
    font-size: 24rpx;
    color: #999;
  }
  
  .discount {
    padding: 20rpx;
    border-bottom: 1rpx solid #eee;
    width: 100%;
    box-sizing: border-box;
  }
  
  .discount-card {
    border: 1rpx solid #298deb;
    border-radius: 10rpx;
    padding: 15rpx;
    display: flex;
    align-items: center;
    background: #d2f1ff;
    height: 120rpx;
    width: 100%;
    box-sizing: border-box;
    justify-content: space-between;
  }
  
  .discount-name {
    font-size: 28rpx;
    font-weight: bold;
    display: block;
  }
  
  .discount-desc {
    font-size: 24rpx;
    color: #666;
  }
  
  .buy-btn {
    background: #007aff;
    color: #fff;
    padding: 5rpx 28rpx;
    border-radius: 6rpx;
    font-size: 28rpx;
    left: 230rpx;
  }
  
  .buy-btn::after {
    border: none;
  }

  .bottom-btns {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    /* 调整内边距，上下15rpx让高度更舒展，左右20rpx控制侧边间距 */
    padding: 15rpx 20rpx;
    background-color: #fff;
    border-top: 1rpx solid #f5f5f5;
    z-index: 99;
    display: flex;
    align-items: center; /* 子元素垂直居中 */
    justify-content: space-between; /* 左右元素分散排列 */
    box-sizing: border-box;
  }

  .bottom-left {
    display: flex;
    flex-direction: row; /* 横向排列（核心修改） */
    align-items: center; /* 内部元素垂直居中 */
    gap: 30rpx; /* 客服和喜欢之间的间距 */
  }

  .contact, .likeit {
    display: flex;
    flex-direction: column; /* 图标+文字垂直堆叠 */
    align-items: center; /* 水平居中 */
  }
  
  /* 图标尺寸控制 */
  .contact-image, .likeit-image {
    width: 32rpx;
    height: 32rpx;
    object-fit: contain; /* 防止图标变形 */
  }
  
  /* 文字样式优化 */
  .contact-wrd, .lekeit-wrd { /* 注意：wxml里是lekeit-wrd，需和CSS类名一致 */
    font-size: 24rpx;
    color: #666;
    margin-top: 4rpx; /* 文字与图标间距 */
  }

  .book-btn {
    background: #00cc99;
    color: #fff;
    padding: 10rpx 50rpx;
    border-radius: 80rpx;
    font-size: 28rpx;
    border: none;
    min-width: 200rpx;
    margin-left: 350rpx;
  }