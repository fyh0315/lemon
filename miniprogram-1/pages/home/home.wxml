<view class="container">
    <image src="/images/home/bg1.jpg" class="bg-image"></image>
   <!-- 搜索框 -->
   <view class="search-box">
    <icon class="search-icon" type="search" size="15" color="#999"></icon>
    <input type="text" placeholder="搜索" class="search-input" />
  </view>

  <!-- 顶部标题 -->
  <view class="header">
    <view class="header-line"></view>
    <text class="header-title">乐萌</text>
    <view class="header-line"></view>
  </view>

  <!-- 功能按钮区 -->
  <view class="button-group">
    <view class="button-item">
      <image src="/images/home/coupon.png" class="button-icon"></image>
      <view class="button-text">乐优惠</view>
    </view>
    <!-- 竖线分隔符 -->
    <view class="divider"></view>
    <view class="button-item" bindtap="onTapGoRehearsal">
      <image src="/images/home/note.png" class="button-icon"></image>
      <view class="button-text">去排练</view>
    </view>
  </view>

  <!-- 排练时长统计 -->
  <view class="stats-card">
    <!-- 左侧文本区域 -->
    <view class="stats-left">
      <view class="stats-title">本月排练时长</view>
      <view class="stats-sub">{{practiceSub}}</view>
      <view class="stats-desc">{{practiceDesc}}</view>
    </view>
    <!-- 右侧数值区域 -->
    <view class="stats-right">
      <view class="stats-value">{{practiceTime}}</view>
    </view>
  </view>

  <!-- 优惠金额统计 -->
  <view class="stats-card">
    <!-- 左侧文本区域 -->
    <view class="stats-left">
      <view class="stats-title">本月优惠总金额</view>
      <view class="stats-sub">{{discountSub}}</view>
      <view class="stats-desc">{{discountDesc}}</view>
    </view>
    <!-- 右侧数值区域 -->
    <view class="stats-right">
      <view class="stats-value">{{discountAmount}}</view>
    </view>
  </view>
</view>