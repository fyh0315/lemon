/* 全局页面设置 */
page {
  background-color: #f5f5f5; /* 浅灰色背景 */
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
}

/* 容器 */
.container {
  padding: 16px;
}

/* 顶部标题 */
.header {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20px 0;
    width: 50%;
  }
  
  /* 横线样式 */
  .header-line {
    flex: 1;
    height: 1px;
    background-color: #333; /* 横线颜色 */
  }
  
  /* 左侧横线与标题间距 */
  .header-line:first-child {
    margin-right: 30px;
  }
  
  /* 右侧横线与标题间距 */
  .header-line:last-child {
    margin-left: 30px;
  }
  
  /* 标题文字 */
  .header-title {
    font-size: 32px;
    font-weight: bold;
    color: #333;
    white-space: nowrap;
  }

/* 功能按钮组 */
.button-group {
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin: 20px 0;
  align-items: center;
}
.button-item {
  flex: 1;
  text-align: center;
  padding: 16px 0;
  margin: 0 50px;
}
.button-icon {
  width: 60px;
  height: 60px;
  margin-bottom: 4px;
}
.button-text {
  font-size: 16px;
  color: #333;
}
/* 竖线分隔符样式 */
.divider {
    width: 1px;
    height: 80px;
    background-color: #9b9595; /* 竖线颜色，浅灰色更自然 */
  }


/* 统计卡片 */
.stats-card {
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  padding: 16px;
  margin-bottom: 16px;
  width: 287px;
}

.stats-title {
  font-size: 18px;
  color: #333;
  margin-bottom: 8px;
  display: block;
}
.stats-value {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
  display: block;
}
.stats-sub {
  font-size: 14px;
  color: #999;
  margin-bottom: 4px;
  display: block;
}
.stats-desc {
  font-size: 14px;
  color: #666;
  font-style: italic;
}

