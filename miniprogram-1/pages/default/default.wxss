page { 
    background-color: #f5f5f5; 
    padding-top: 20rpx; 
  }
  

  .info-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 40rpx 30rpx; 
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
    margin-bottom: 10rpx;
  }
  
  .info-input {
    width: 100%;
    height: 50rpx;
    font-size: 28rpx;
    color: #333;
    text-align: right;
    padding: 0;
    margin: 0;
    border: none;
    outline: none;
  }
  
  .info-label { 
    font-size: 28rpx; 
    color: #666; 
  }
  .info-value { 
    font-size: 28rpx; 
    color: #333; 
  }
  .avatar-container { 
    display: flex; 
    align-items: center; 
  }
  .avatar { 
    width: 80rpx; 
    height: 80rpx; 
    border-radius: 50%; 
    border: 1rpx solid #eee; 
  }
  .info-action { 
    font-size: 28rpx; 
    color: #07c160; 
    margin-left: 20rpx; 
  }
  .info-edit-container {
    flex: 1;
    text-align: right;
  }