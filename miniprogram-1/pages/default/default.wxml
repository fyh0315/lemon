<!-- 头像条目 -->
<view class="info-item">
  <view class="info-label">头像</view>
  <view class="avatar-container">
    <image 
      class="avatar" 
      src="{{avatarUrl || '/images/default-avatar.png'}}" 
      mode="widthFix"
    ></image>
    <view class="info-action" bindtap="chooseAvatar">更换头像</view>
  </view>
</view>

<!-- 昵称条目（可编辑） -->
<view class="info-item" bindtap="toggleNicknameEdit">
  <view class="info-label">昵称</view>
  <!-- 编辑状态显示输入框，否则显示文本 -->
  <view class="info-edit-container">
    <input 
      wx:if="{{isEditingNickname}}" 
      class="info-input" 
      value="{{nickname}}" 
      bindblur="saveNickname" 
      bindconfirm="saveNickname" 
      placeholder="请输入昵称"
      focus="{{isEditingNickname}}" 
    />
    <view wx:else class="info-value">{{nickname || '未设置'}}</view>
  </view>
</view>

<!-- 手机号条目（可编辑） -->
<view class="info-item" bindtap="togglePhoneEdit">
  <view class="info-label">手机号</view>
  <view class="info-edit-container">
    <input 
      wx:if="{{isEditingPhone}}" 
      class="info-input" 
      value="{{phone}}" 
      bindblur="savePhone" 
      bindconfirm="savePhone"
      placeholder="请输入手机号"
      type="number"
      maxlength="11" 
      focus="{{isEditingPhone}}"
    />
    <view wx:else class="info-value">{{phone || '未设置'}}</view>
  </view>
</view>