/* 容器 */
.container {
    padding: 10rpx;
    background-color: #f5f5f5;
  }
  
  /* 标题 */
  .page-title {
    text-align: center;
    font-size: 36rpx;
    margin: 20rpx 0;
  }
  
 /* 搜索框样式 */
.search-box {
    background-color: #fff;
    border-radius: 40rpx;      /* 圆角 */
    padding: 5rpx 20rpx;      /* 内边距 */
    margin-bottom: 30rpx;      /* 与标题间距 */
    width: 85%;
    display: flex;             /* 使用flex布局容纳图标和输入框 */
    align-items: center;       /* 垂直居中对齐 */
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  .search-icon {
  color: #999;               /* 图标颜色 */
  margin-right: 15rpx;       /* 与输入框的间距 */
}
  .search-input {
    width: 100%;
    height: 60rpx;
    font-size: 28rpx;
  }
  
  /* 订单列表 */
  .order-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    align-items: center;
  }
  
  /* 单个订单项 */
  .order-item {
    background-color: #fff;
    border-radius: 15rpx;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    gap: 25rpx;
    width: 90%;
    box-sizing: border-box;
  }
  
  /* 订单图片 */
  .order-image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
  }
  
  /* 订单信息容器 */
  .order-info {
    display: flex;
    align-items: flex-start;
    flex: 1; 
  }
  
  /* 订单文字详情 */
  .order-detail {
    display: flex;
    flex-direction: column;
    gap: 10rpx;
    flex: 1;
  }
  .order-header {
    display: flex; /* 水平布局 */
    justify-content: space-between; /* 两端对齐：名字左，状态右 */
    align-items: center; /* 垂直居中：避免名字和状态上下错位 */
    width: 100%; /* 占满父容器宽度，确保两端对齐生效 */
  }
  .order-name {
    font-size: 32rpx;
    font-weight: bold;
  }
  .order-status {
    font-size: 28rpx;
    margin-left: 15rpx;
  }
  .status-doing {
    color: green;
  }
  .status-done {
    color: #999;
  }
  .order-date {
    font-size: 35rpx;
  }
  .order-time {
    font-size: 33rpx;
  }
  
  /* 操作按钮容器 */
  .order-buttons {
    display: flex;
    flex-direction: row; /* 横向排列按钮 */
    justify-content: flex-end; /* 让按钮组整体靠右 */
    gap: 15rpx;
  }
  
  /* 按钮通用样式 */
  .btn {
    width: 140rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 8rpx;
    font-size: 26rpx;
    margin: 0;
    padding: 0;
  }
  .refund {
    border: 1rpx solid #999;
    color: #333;
  }
  .repeat {
    background-color: #54aa11;
    color: #fff;
  }